<Window x:Class="ProjektFilmyWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektFilmyWPF"
        mc:Ignorable="d"
        Title="Wypożyczalnia Filmów" Height="450" Width="800">
    <Grid>
        <!-- Tło z gradientem -->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFACDEFF" Offset="1"/>
                <GradientStop Color="#FF587182" Offset="0.354"/>
                <GradientStop Color="#FF805882" Offset="0.989"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Nagłówek -->
        <TextBlock Text="Wypożyczalnia Filmów" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" />

        <!-- Pole tekstowe z nazwą wypożyczalni -->
        <TextBox x:Name="txtNazwaWypozyczalniaFilmow" HorizontalAlignment="Center" VerticalAlignment="Top" Width="350" Height="50" Margin="0,100,0,0" FontSize="18" TextWrapping="Wrap" VerticalContentAlignment="Center" Padding="10" />

        <!-- Przycisk do przejścia do listy filmów -->
        <Button Content="Dostępne Filmy" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Height="60" Margin="0,200,0,0" FontSize="20" FontWeight="Bold" Background="#FF805882" Foreground="White" BorderBrush="White" BorderThickness="2" Click="btnMovieList_Click" />

    </Grid>
</Window>
